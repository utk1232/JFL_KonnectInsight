                        <p class="my-4">Our Guest Services representative will reach out to you within 24-48 Hours</p>
                      </div>
                </div>

            </div>
            <div class="confirm_container_footer">
                <div class="d-grid gap-2">
                    <button class="btn btn-primary cust_submit_btn" type="button" onclick="submitClosebtn()">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>

<script>

    function handleLoad() {
        let details = JSON.parse(sessionStorage.getItem("orderDetails"));
        console.log(details);
        document.getElementById('orderprice').innerText = details.price;
        if (details.orderno == 0) {
            document.getElementById('orderno').innerText = '';
        } else {
            document.getElementById('orderno').innerText = details.orderno;
        }
        document.getElementById('orderitems').innerText = details.itemNos;

    }
    document.addEventListener('DOMContentLoaded', handleLoad());

    function submitClosebtn(){
        // Redirect to the route that renders home.ejs
        window.location.href = "/home";
    }
</script>

</html>