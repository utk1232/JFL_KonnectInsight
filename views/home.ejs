<body>

    <form method="POST" action="/otp">
        <div class="container mt-4">
            <div class="col-md-6">
                <div class="card cust_card">
                    <div class="card-header card_header_bgColor text-center">
                        <h1>
                            <img src="./assets/logo.png" width="80" alt="logo" />
                            <span>Dominoâ€™s Pizza</span>
                        </h1>
                    </div>
                    <p class="card-text">
                        Please Enter your Employee Code to continue
                    </p>
                    <div class="card-body">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="employeeCode" name="employeeCode" required
                                placeholder="Enter your Employee Code" aria-label="Employee Code"
                                aria-describedby="basic-addon1" pattern="^[A-Za-z0-9]{1,10}$"
                                title="Please enter a valid Employee Code." />
                        </div>
                        <div class="mb-0 mt-2 row align-items-center">
                            <button type="submit" class="btn btn-success cust_btn">
                                Continue >
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
